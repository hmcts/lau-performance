#!groovy

properties([
    pipelineTriggers([cron('00 22 * * *')]),
    parameters([
        string(name: 'ENVIRONMENT', defaultValue: 'perftest', description: 'Environment to test'),
        string(name: 'URL_TO_TEST', defaultValue: 'https://lau.perftest.platform.hmcts.net', description: 'The URL you want to run these tests against'),
        string(name: 'IDAM_URL', defaultValue: 'https://idam-web-public.perftest.platform.hmcts.net', description: 'The IDAM API Url'),
        string(name: 'BaseURL', defaultValue: 'https://lau.perftest.platform.hmcts.net', description: 'The professional reference data Url')
    ])
])

@Library("Infrastructure")

def type = "java"
def product = "LAU"
def component = "professional-api"

